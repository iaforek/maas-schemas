{
  "$id": "http://maasglobal.com/core/components/fare.json",
  "description": "A fare/price as billed to the user in WMPs or in tokens",
  "type": "object",
  "definitions": {
    "tokenId": {
      "type": "string",
      "pattern": "^[a-z]+(-[a-z0-9_]+)+$"
    },
    "fareType": {
      "type": "string",
      "enum": ["charge", "refund"]
    },
    "fareTypeCHARGE": {
      "default": "charge",
      "allOf": [{ "$ref": "#/definitions/fareType" }, { "const": "charge" }]
    },
    "fareTypeREFUND": {
      "default": "refund",
      "allOf": [{ "$ref": "#/definitions/fareType" }, { "const": "refund" }]
    }
  },
  "properties": {
    "amount": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "currency": {
      "$ref": "http://maasglobal.com/core/components/common.json#/definitions/metaCurrency"
    },
    "tokenId": {
      "$ref": "#/definitions/tokenId"
    },
    "hidden": {
      "description": "Whether clients should hide this fare for customer in payment view and profile view",
      "type": "boolean"
    },
    "originalAmount": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "productionAmount": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "type": { "$ref": "#/definitions/fareType" }
  },
  "required": ["amount", "currency"],
  "additionalProperties": false
}
